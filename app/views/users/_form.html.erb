<%=form_for(@user) do |f| %>
<%= render "shared/error_messages", :target => @user %>
	<div class="field">
  		<%=f.label :user_name,'Username' %><br/>	
  		<%=f.text_field :user_name %><br/>
	</div>
	
	<div class="field">
  		<%=f.label :password,'Password' %><br/>
  		<%=f.text_field :password %><br/>
	</div>

	<div class="field">
  		<%=f.label :email,'Email'%><br/> 	
  		<%=f.text_field :email %><br/>
	</div>
	<div class="actions">
		<%=f.submit %>
	</div>
<% end %>