<h1 id="schedule_id">Listing schedules</h1>

<table>
  <tr>
    <th>Id</th>
    <th>Bus route</th>
    <th>Bus company</th>
    <th>Departure date</th>
    <th>Arrival date</th>
    <th>Arrival date</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @schedules.each do |schedule| %>
  <tr>
    <td><%=schedule.id%></td>
    <td><%= schedule.bus_route_id %></td>
    <td><%= schedule.bus_company_id %></td>
    <td><%= schedule.departure_date %></td>
    <td><%= schedule.arrival_date %></td>
    <td><%= schedule.arrival_date %></td>
    <td><%= link_to 'Show', schedule %></td>
    <td><%= link_to 'Edit', edit_schedule_path(schedule) %></td>
    <td><%= link_to 'Destroy', schedule, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

